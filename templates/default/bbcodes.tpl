<div id="tags" class="btn-group btn-group-justified bbcodes">
	<span class="btn btn-default" onclick="insertext('[b]','[/b]', '{area}')" title='{l_tags.bold}'><i class="fa fa-bold"></i></span>
	<span class="btn btn-default" onclick="insertext('[u]','[/u]', '{area}')" title='{l_tags.underline}'><i class="fa fa-underline"></i></span>
	<span class="btn btn-default" onclick="insertext('[i]','[/i]', '{area}')" title='{l_tags.italic}'><i class="fa fa-italic"></i></span>
	<span class="btn btn-default" onclick="insertext('[s]','[/s]', '{area}')" title='{l_tags.crossline}'><i class="fa fa-strikethrough"></i></span>

	<span class="btn btn-default" onclick="insertext('[code]','[/code]', '{area}')" title='{l_tags.code}'><i class="fa fa-code"></i></span>
