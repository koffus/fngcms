	<span class="btn btn-default" onclick="insertext('[img]','[/img]', '{area}')" title='{l_tags.imagelink}'><i class="fa fa-picture-o"></i></span>

	<span class="btn btn-default" onclick="insertext('[color=]','[/color]', '{area}')" title='{l_tags.color}'><i class="fa fa-paint-brush"></i></span>
