<div id="tags" class="btn-toolbar mt-3">
	<div class="btn-group mr-2">
		<button type="button" class="btn btn-secondary" onclick="insertext('[b]','[/b]', '{area}')" title='{l_tags.bold}'><i class="fa fa-bold"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[u]','[/u]', '{area}')" title='{l_tags.underline}'><i class="fa fa-underline"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[i]','[/i]', '{area}')" title='{l_tags.italic}'><i class="fa fa-italic"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[s]','[/s]', '{area}')" title='{l_tags.crossline}'><i class="fa fa-strikethrough"></i></button>
	</div>
	<div class="btn-group mr-2">
		<button type="button" class="btn btn-secondary" onclick="insertext('[code]','[/code]', '{area}')" title='{l_tags.code}'><i class="fa fa-code"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[hide]','[/hide]', '{area}')" title='{l_tags.hide}'><i class="fa fa-shield"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[quote]','[/quote]', '{area}')" title='{l_tags.quote}'><i class="fa fa-quote-left"></i></button>
	</div>
	<div class="btn-group mr-2">
		<button type="button" class="btn btn-secondary" onclick="insertext('[url]','[/url]', '{area}')" title='{l_tags.link}'><i class="fa fa-link"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[email]','[/email]', '{area}')" title='{l_tags.email}'><i class="fa fa-envelope-o"></i></button>
		<button type="button" class="btn btn-secondary" onclick="insertext('[img]','[/img]', '{area}')" title='{l_tags.imagelink}'><i class="fa fa-picture-o"></i></button>
	</div>
	<div class="btn-group">
		<button type="button" class="btn btn-secondary" onclick="insertext('[color=]','[/color]', '{area}')" title='{l_tags.color}'><i class="fa fa-paint-brush"></i></button>
		<button type="button" class="btn btn-secondary" onclick="showModal('modal-smiles')"><i class="fa fa-smile-o"></i></button>
	</div>
</div>